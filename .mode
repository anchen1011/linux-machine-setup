mode($1) {
  if [ "$1" == "isolate" ] || [ "$1" == "i" ]; then
    sudo service ssh stop
    sudo service apache2 stop
    sudo ufw disable
  elif [ "$1" == "connect" ] || [ "$1" == "c" ]; then
    sudo ufw enable
    sudo service apache2 start
    sudo service ssh start
  else
    echo "mode [isolate | connect]"
  fi
}
